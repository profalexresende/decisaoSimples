<Window x:Class="idadeJogador.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:idadeJogador"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblIdade" Content="Digite a Idade" HorizontalAlignment="Left" Margin="71,42,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtIdade" HorizontalAlignment="Left" Margin="71,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnVerificar" Content="Verificar" HorizontalAlignment="Left" Margin="71,111,0,0" VerticalAlignment="Top" Width="120" Click="btnVerificar_Click"/>

    </Grid>
</Window>
